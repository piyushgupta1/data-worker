{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "semicolon": [
            false,
            "never"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "ignore",
                    "arrays": "ignore",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "no-string-literal": false,
        "object-literal-sort-keys": false,
        "arrow-parens": false,
        "variable-name": false
    }
}